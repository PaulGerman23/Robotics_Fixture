@model List<string>

@{
    ViewData["Title"] = "Torneos";
    var tournaments = ViewBag.Tournaments as List<RoboticsFixture.Models.Tournament> ?? new List<RoboticsFixture.Models.Tournament>();
}

<div class="mb-4">
    <h1>
        <i class="fas fa-trophy me-2"></i> Gestión de Torneos
    </h1>
    <p style="color: var(--text-muted); font-weight: 500;">Selecciona una categoría para crear o gestionar torneos</p>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    @if (Model.Any())
    {
        @foreach (var category in Model)
        {
            var categoryTournaments = tournaments.Where(t => t.Category == category && t.IsActive).OrderByDescending(t => t.CreatedDate).ToList();

            @if (categoryTournaments.Any())
            {
                @foreach (var tournament in categoryTournaments)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="scifi-card h-100">
                            <div class="scifi-card-header">
                                <i class="fas fa-robot scifi-card-icon"></i>
                                <h4 class="scifi-card-title">@category - @tournament.Name</h4>
                            </div>
                            
                            <div class="scifi-card-body">
                                <div class="scifi-stats-grid">
                                    <div class="scifi-stat-item">
                                        <span class="scifi-stat-label">MODO:</span>
                                        <span class="scifi-stat-value">
                                            @if (tournament.CombatMode == RoboticsFixture.Models.Enums.CombatMode.Autonomous)
                                            {
                                                <text>AUTÓNOMO</text> <i class="fas fa-robot ms-1"></i>
                                            }
                                            else
                                            {
                                                <text>RADIOCONTROL</text> <i class="fas fa-gamepad ms-1"></i>
                                            }
                                        </span>
                                    </div>
                                    <div class="scifi-stat-item">
                                        <span class="scifi-stat-label">ESTADO:</span>
                                        <span class="scifi-stat-value">
                                            ACTIVO <span class="status-dot ms-1"></span>
                                        </span>
                                    </div>
                                    <div class="scifi-stat-item">
                                        <span class="scifi-stat-label">FECHA:</span>
                                        <span class="scifi-stat-value">
                                            @tournament.CreatedDate.ToString("MMM yyyy").ToUpper() <i class="fas fa-calendar-alt ms-1"></i>
                                        </span>
                                    </div>
                                </div>

                                <a href="@Url.Action("Fixture", new { tournamentId = tournament.Id })" class="scifi-btn-main mb-3">
                                    VER FIXTURE <i class="fas fa-eye"></i>
                                </a>
                            </div>

                            <div class="scifi-card-footer">
                                <a href="#" class="scifi-action-btn">
                                    <i class="fas fa-edit"></i> EDITAR
                                </a>
                                <form asp-action="ResetTournament" method="post" onsubmit="return confirm('¿Está seguro de reiniciar el torneo? Se perderán todos los resultados.');" style="display:inline;">
                                    <input type="hidden" name="tournamentId" value="@tournament.Id" />
                                    <button type="submit" class="scifi-action-btn">
                                        <i class="fas fa-redo"></i> REINICIAR
                                    </button>
                                </form>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('¿Está seguro de eliminar este torneo?');" style="display:inline;">
                                    <input type="hidden" name="id" value="@tournament.Id" />
                                    <button type="submit" class="scifi-action-btn">
                                        <i class="fas fa-trash"></i> ELIMINAR
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Tarjeta para crear torneo cuando no hay torneos activos en esta categoría -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <!-- Icono y Categoría -->
                            <div class="text-center mb-4">
                                <h4 class="card-title" style="color: var(--text-primary); font-weight: 700;">@category</h4>
                            </div>

                            <div class="alert alert-secondary mb-3">
                                <i class="fas fa-info-circle me-2"></i>
                                No hay torneos activos en esta categoría
                            </div>

                            <!-- Botones de acción -->
                            <div class="d-grid gap-3">
                                <!-- Crear Nuevo Torneo -->
                                <a href="@Url.Action("CreateTournament", new { category })" class="btn btn-success">
                                    <i class="fas fa-plus-circle"></i> Crear Torneo
                                </a>

                                <!-- Generar Fixture Rápido (sin modo específico, usa Autónomo por defecto) -->
                                <form asp-action="GenerateFixture" method="post">
                                    <input type="hidden" name="category" value="@category" />
                                    <button type="submit" class="btn btn-warning w-100">
                                        <i class="fas fa-bolt"></i> Generar Rápido (Autónomo)
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No hay categorías disponibles. Agregue competidores primero en la sección <a asp-controller="Competitors" asp-action="Index" class="alert-link">"Competidores"</a>.
            </div>
        </div>
    }
</div>

<!-- Información sobre los modos de combate -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle me-2"></i> Modos de Combate Disponibles
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mode-info-box autonomous">
                            <h5><i class="fas fa-robot me-2"></i>Modo Autónomo (Sumo LNR)</h5>
                            <ul class="mode-features">
                                <li><i class="fas fa-check-circle me-2"></i>Robots completamente autónomos</li>
                                <li><i class="fas fa-check-circle me-2"></i>Combates al mejor de 3 asaltos</li>
                                <li><i class="fas fa-check-circle me-2"></i>Simulación automática de resultados</li>
                                <li><i class="fas fa-check-circle me-2"></i>Basado en nivel de habilidad (RatingSeed)</li>
                                <li><i class="fas fa-check-circle me-2"></i>Avance automático de rondas</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mode-info-box radiocontrol">
                            <h5><i class="fas fa-gamepad me-2"></i>Modo Radiocontrol (Batalla Robot)</h5>
                            <ul class="mode-features">
                                <li><i class="fas fa-check-circle me-2"></i>Robots controlados a distancia</li>
                                <li><i class="fas fa-check-circle me-2"></i>Combate de un solo round (3 minutos)</li>
                                <li><i class="fas fa-check-circle me-2"></i>Registro manual por el juez</li>
                                <li><i class="fas fa-check-circle me-2"></i>5 tipos de victoria diferentes</li>
                                <li><i class="fas fa-check-circle me-2"></i>Control total sobre resultados</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .mode-info-box {
        padding: 1.5rem;
        border-radius: 12px;
        border: 2px solid;
        height: 100%;
        transition: var(--transition);
    }

        .mode-info-box.autonomous {
            border-color: var(--primary-cyan);
            background: rgba(0, 229, 255, 0.05);
        }

        .mode-info-box.radiocontrol {
            border-color: var(--secondary-orange);
            background: rgba(255, 159, 0, 0.05);
        }

        .mode-info-box:hover {
        }

        .mode-info-box h5 {
            color: var(--text-primary);
            margin-bottom: 1rem;
            font-family: 'Orbitron', sans-serif;
        }

    .mode-features {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .mode-features li {
            color: var(--text-muted);
            padding: 0.5rem 0;
            font-size: 0.95rem;
        }

        .mode-features i {
            color: var(--success-green);
        }

    .alert-info {
        border-left: 4px solid var(--primary-cyan);
    }
</style>