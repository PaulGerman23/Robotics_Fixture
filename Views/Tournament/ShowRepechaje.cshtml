    @@keyframes vsGlow {
        0%, 100%

    {
        text-shadow: 0 0 40px rgba(255, 159, 0, 1);
        transform: scale(1);
    }

    50% {
        text-shadow: 0 0 60px rgba(255, 159, 0, 1), 0 0 80px rgba(255, 159, 0, 0.8);
        transform: scale(1.1);
