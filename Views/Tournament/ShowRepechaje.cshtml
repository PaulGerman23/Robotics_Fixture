        justify-content: center;
        z-index: 9999;
        animation: fadeIn 0.5s ease;
        overflow: hidden;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .repechaje-content {
        background: linear-gradient(135deg, rgba(26, 33, 55, 0.95), rgba(21, 27, 46, 0.95));
