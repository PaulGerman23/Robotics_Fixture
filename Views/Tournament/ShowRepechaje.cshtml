@model RoboticsFixture.Models.Match

@{
    ViewData["Title"] = "Repechaje";
    var category = ViewBag.Category;
}

<div class="repechaje-modal" id="repechajeModal">
    <div class="repechaje-content">
        <h1 class="repechaje-title">
            <i class="fas fa-random me-3"></i>
            ¡VS EXTRA SORTEADO!
        </h1>

        <div class="repechaje-subtitle">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Número impar de competidores detectado - Se requiere enfrentamiento adicional
        </div>

        <div class="vs-animation" id="vsAnimation">
            <div class="competitor-box left-box">
                <div class="robot-icon-large">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="competitor-name">@Model.Competitor1?.Name</div>
                <div class="competitor-team">@Model.Competitor1?.Team</div>
            </div>

            <div class="vs-center">
                <div class="vs-text">VS</div>
                <div class="vs-lightning">
                    <i class="fas fa-bolt"></i>
                    <i class="fas fa-bolt"></i>
                    <i class="fas fa-bolt"></i>
                </div>
            </div>

            <div class="competitor-box right-box">
                <div class="robot-icon-large">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="competitor-name">@Model.Competitor2?.Name</div>
                <div class="competitor-team">@Model.Competitor2?.Team</div>
            </div>
        </div>

        <div class="repechaje-info">
            <i class="fas fa-info-circle me-2"></i>
            El ganador de este enfrentamiento avanzará junto a los demás competidores
        </div>

        <div class="repechaje-actions">
            <form asp-action="SetWinner" method="post" style="display: inline;">
                <input type="hidden" name="matchId" value="@Model.Id" />
                <input type="hidden" name="winnerId" value="@Model.Competitor1Id" />
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-check me-2"></i>
                    @Model.Competitor1?.Name Gana
                </button>
            </form>

            <form asp-action="SetWinner" method="post" style="display: inline;">
                <input type="hidden" name="matchId" value="@Model.Id" />
                <input type="hidden" name="winnerId" value="@Model.Competitor2Id" />
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-check me-2"></i>
                    @Model.Competitor2?.Name Gana
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(() => {
            document.querySelector('.vs-animation').classList.add('active');
        }, 500);

        for (let i = 0; i < 80; i++) {
            setTimeout(() => createParticle(), i * 40);
        }

        function createParticle() {
            const particle = document.createElement('div');
            particle.className = 'energy-particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.top = Math.random() * 100 + '%';
            particle.style.animationDelay = Math.random() * 2 + 's';

            const colors = ['#00e5ff', '#00ff88', '#ff9f00', '#a855f7'];
            particle.style.background = colors[Math.floor(Math.random() * colors.length)];

            document.querySelector('.repechaje-modal').appendChild(particle);

            setTimeout(() => particle.remove(), 3000);
        }

        setInterval(() => {
            for (let i = 0; i < 3; i++) {
                createParticle();
            }
        }, 600);
    </script>
}

<style>
