            filter: drop-shadow(0 0 15px rgba(255, 255, 0, 1));
            animation: lightning 0.3s ease-in-out infinite;
        }

            .vs-lightning i:nth-child(1) {
                animation-delay: 0s;
            }

            .vs-lightning i:nth-child(2) {
                animation-delay: 0.1s;
            }

            .vs-lightning i:nth-child(3) {
                animation-delay: 0.2s;
            }

    @@keyframes lightning {
        0%, 100%

    {
        opacity: 1;
        transform: scale(1);
    }

    50% {
        opacity: 0.3;
        transform: scale(0.8);
    }

    }

    .repechaje-info {
        background: rgba(0, 229, 255, 0.15);
        border-left: 4px solid #00e5ff;
        padding: 1.5rem;
        border-radius: 10px;
        color: #00e5ff;
        font-size: 1.1rem;
        font-weight: 600;
        margin: 2rem 0;
    }

    .repechaje-actions {
        display: flex;
        gap: 2rem;
        justify-content: center;
        margin-top: 3rem;
        flex-wrap: wrap;
    }

    .energy-particle {
        position: absolute;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        pointer-events: none;
        animation: particleFloat 3s linear infinite;
        box-shadow: 0 0 15px currentColor;
    }

    @@keyframes particleFloat {
        0%

    {
        transform: translateY(0) scale(1);
        opacity: 1;
    }

    100% {
        transform: translateY(-100vh) scale(0);
        opacity: 0;
    }

    }

    @@media (max-width: 768px) {
        .vs-animation

    {
        flex-direction: column;
    }

    .vs-center {
        flex: 0 0 auto;
    }

    .repechaje-title {
        font-size: 2rem;
    }

    .competitor-name {
        font-size: 1.3rem;
    }

    .repechaje-actions {
        flex-direction: column;
    }

    }
</style>
