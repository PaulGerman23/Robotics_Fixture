@* Views/Tournament/SelectBye.cshtml *@
@model List<RoboticsFixture.Models.Competitor>

@{
    ViewData["Title"] = "Seleccionar BYE";
    var category = ViewBag.Category;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-user-check me-2"></i> Seleccionar Competidor que Pasa de Ronda
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-4">
                    <i class="fas fa-info-circle me-2"></i>
                    Hay un número impar de competidores (@Model.Count). Seleccione quién pasa automáticamente a la siguiente ronda.
                </div>

                <form asp-action="GenerateFixture" method="post">
                    <input type="hidden" name="category" value="@category" />

                    <div class="mb-4">
                        <label class="form-label">
                            <i class="fas fa-user me-2"></i>Competidor con BYE
                        </label>
                        <select name="byeCompetitorId" class="form-select" required>
                            <option value="">-- Seleccione un competidor --</option>
                            @foreach (var competitor in Model)
                            {
                                <option value="@competitor.Id">@competitor.Name - @competitor.Team</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check me-2"></i>Generar Fixture
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>