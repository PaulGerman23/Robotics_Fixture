@model RoboticsFixture.Models.Competitor

@{
    ViewData["Title"] = "Nuevo Competidor";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-user-plus me-2"></i> Registrar Nuevo Competidor
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-user me-2"></i>Nombre
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del competidor" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Team" class="form-label">
                            <i class="fas fa-users me-2"></i>Equipo
                        </label>
                        <input asp-for="Team" class="form-control" placeholder="Ingrese el nombre del equipo" />
                        <span asp-validation-for="Team" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Category" class="form-label">
                            <i class="fas fa-tag me-2"></i>Categoría
                        </label>
                        <input asp-for="Category" class="form-control" placeholder="Ej: Junior, Senior, Professional" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}