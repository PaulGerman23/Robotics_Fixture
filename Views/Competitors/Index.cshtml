@model IEnumerable<RoboticsFixture.Models.Competitor>

@{
    ViewData["Title"] = "Competidores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-users-cog me-2"></i> Gestión de Competidores
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Nuevo Competidor
    </a>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-list me-2"></i> Lista de Competidores Activos
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="fas fa-user me-2"></i>Nombre</th>
                            <th><i class="fas fa-users me-2"></i>Equipo</th>
                            <th><i class="fas fa-tag me-2"></i>Categoría</th>
                            <th class="text-center"><i class="fas fa-tools me-2"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Team</td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="fas fa-robot me-1"></i> @item.Category
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No hay competidores registrados. Agrega el primer competidor para comenzar.
            </div>
        }
    </div>
</div>