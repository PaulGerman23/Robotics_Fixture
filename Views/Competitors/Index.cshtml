@model IEnumerable<RoboticsFixture.Models.Competitor>

@{
    ViewData["Title"] = "Competidores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-users-cog me-2"></i> Gestión de Competidores
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Nuevo Competidor
    </a>
</div>

<div class="scifi-container">
    <div class="scifi-container-header">
        <div class="text-center w-100">
            <h5 style="color: #00e5ff; letter-spacing: 3px; margin-bottom: 5px; opacity: 0.8;">ROBOTICS FIXTURE SYSTEM</h5>
            <h3 class="scifi-title">GESTIÓN DE COMPETIDORES</h3>
        </div>
    </div>
    
    <form method="get" asp-action="Index" class="scifi-filter-bar">
        <div class="scifi-input-group">
            <label class="scifi-label">BUSCAR NOMBRE/EQUIPO:</label>
            <input type="text" name="searchString" class="scifi-input" placeholder="Buscar..." value="@ViewData["CurrentFilter"]">
        </div>
        <div class="scifi-input-group">
            <label class="scifi-label">CATEGORÍA:</label>
            <select name="category" class="scifi-input">
                <option value="">TODAS</option>
                <option value="Sumo">Sumo</option>
                <option value="MiniSumo">MiniSumo</option>
                <option value="Carreras">Carreras</option>
                <option value="Futbol">Futbol</option>
            </select>
        </div>
        <button type="submit" class="scifi-btn-filter">APLICAR FILTROS</button>
        <a asp-action="Index" class="scifi-btn-clear">LIMPIAR</a>
    </form>

    <div class="scifi-table-responsive">
        @if (Model.Any())
        {
            <table class="scifi-table">
                <thead>
                    <tr>
                        <th>NOMBRE</th>
                        <th>EQUIPO</th>
                        <th>CATEGORÍA</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Team</td>
                            <td>
                                <span class="badge bg-info" style="background: rgba(0, 229, 255, 0.1) !important; border: 1px solid #00e5ff; color: #00e5ff !important; box-shadow: none;">
                                    @item.Category
                                </span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="scifi-action-icon edit" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="scifi-action-icon delete" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info m-3" style="background: rgba(0, 229, 255, 0.1); color: #00e5ff; border: 1px solid #00e5ff;">
                <i class="fas fa-info-circle me-2"></i>
                No hay competidores registrados. Agrega el primer competidor para comenzar.
            </div>
        }
    </div>
</div>