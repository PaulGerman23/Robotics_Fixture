@{
    ViewData["Title"] = "Home Page";
}
@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mt-5">
    <div class="mb-5">
        <i class="fas fa-robot" style="font-size: 6rem; color: var(--primary-color); text-shadow: 0 0 30px rgba(0, 212, 255, 0.6);"></i>
    </div>
    <h1 class="display-3 mb-4" style="color: var(--primary-color); text-shadow: 0 0 20px rgba(0, 212, 255, 0.5);">
        Sistema de Fixture de Robótica
    </h1>
    <p class="lead mb-5" style="color: #cbd5e0;">
        Gestiona competidores, genera fixtures aleatorios y visualiza torneos en tiempo real
    </p>

    <div class="row g-4 mt-5">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-5">
                    <i class="fas fa-users-cog mb-3" style="font-size: 3rem; color: var(--neon-blue);"></i>
                    <h3 class="card-title mb-3">Gestionar Competidores</h3>
                    <p class="card-text mb-4">Crea, edita y administra los competidores del torneo</p>
                    <a href="/Competitors" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i> Ir a Competidores
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-5">
                    <i class="fas fa-trophy mb-3" style="font-size: 3rem; color: var(--neon-orange);"></i>
                    <h3 class="card-title mb-3">Gestionar Torneos</h3>
                    <p class="card-text mb-4">Genera fixtures y administra los enfrentamientos</p>
                    <a href="/Tournament" class="btn btn-warning btn-lg">
                        <i class="fas fa-sitemap me-2"></i> Ir a Torneos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-microchip mb-3" style="font-size: 2rem; color: var(--primary-color);"></i>
                    <h5>Tecnología Avanzada</h5>
                    <p class="small text-muted">Algoritmos de emparejamiento optimizados</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-cogs mb-3" style="font-size: 2rem; color: var(--primary-color);"></i>
                    <h5>Automatización Total</h5>
                    <p class="small text-muted">Avance automático de rondas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line mb-3" style="font-size: 2rem; color: var(--primary-color);"></i>
                    <h5>Visualización Clara</h5>
                    <p class="small text-muted">Brackets interactivos y modernos</p>
                </div>
            </div>
        </div>
    </div>
</div>